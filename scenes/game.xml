<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>	
	<LIGHT id="light0">                                    
        <enable value ="1" />                   	       
        <position  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>
	
	<LIGHT id="light1">                                    
        <enable value ="1" />                   	      
        <position x="30" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>
	
	<LIGHT id="light2">                                   
        <enable value ="1" />                   	       
        <position x="0" y="10" z="20" w="1" />       		   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />      
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </LIGHT>

    <LIGHT id="light3">                                   
        <enable value ="1" />                   	       
        <position x="30" y="10" z="20" w="1" />       			
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           	
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />       
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />      
    </LIGHT>
    
</LIGHTS>

<!-- Textures -->
<TEXTURES>
    <!-- Game Board -->
    <TEXTURE id="game_board">
        <file path="images/GoRoGo_board.jpg" />
        <amplif_factor s="5" t="5" />
    </TEXTURE>

    <!-- Light Wood -->
    <TEXTURE id="light_wood">
        <file path="images/light_wood.jpg" />
        <amplif_factor s="3" t="3" />
    </TEXTURE>

    <!-- Black Piece Texture -->
    <TEXTURE id="black_rock">
        <file path="images/black_rock.jpg" />
        <amplif_factor s="0.25" t="0.25" />
    </TEXTURE>

    <!-- White Piece Texture -->
    <TEXTURE id="white_rock">
        <file path="images/white_rock.jpg" />
        <amplif_factor s="0.25" t="0.25" />
    </TEXTURE>

    <!-- Henge Piece Texture -->
    <TEXTURE id="grey_rock">
        <file path="images/grey_rock.jpg" />
        <amplif_factor s="0.25" t="0.25" />
    </TEXTURE>

    <!-- Wooden Floor -->
    <TEXTURE id="wood_floor">
        <file path="images/wood_floor.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>
</TEXTURES>


<MATERIALS>
    <!-- A default material -->
    <MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>

<ANIMATIONS>

</ANIMATIONS>

<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />     

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS>
            <!--NODEREF id="dummy"/-->
            <NODEREF id="floor"/>
            <NODEREF id="GoRoGo_board" />
            <NODEREF id="walls"/>
            <NODEREF id="tables"/>
            <NODEREF id="screens"/>
            <!--
            <NODEREF id="black_piece" />
            <NODEREF id="white_piece" />
            <NODEREF id="henge_piece" />
            <NODEREF id="board_place" />
            -->
        </DESCENDANTS>

    </NODE>

    <!--
    <NODE id="dummy" pickable="true">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 0 0 0" />
        </DESCENDANTS>

    </NODE>-->


    <!-- Generic cube -->
    <NODE id="cube">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="-2.5" y="0" z="-2.5"/>

        <DESCENDANTS>
            <NODEREF id="cube_face1" />
            <NODEREF id="cube_face2" />
            <NODEREF id="cube_face3" />
            <NODEREF id="cube_face4" />
            <NODEREF id="cube_face5" />
            <NODEREF id="cube_face6" />
        </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="cube_face1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="5" z="0" />
        <ROTATION axis="x" angle="-180" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>

    </NODE>

    <!-- A cube face -->
    <NODE id="cube_face2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="5" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="cube_face3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="x" angle="90" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="cube_face4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="5" z="5" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="cube_face5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="5" y="0" z="5" />
        <ROTATION axis="y" angle="90" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="cube_face6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <ROTATION axis="y" angle="-90" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>

    <!-- Floor -->
    <NODE id="floor">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="wood_floor" />

        <TRANSLATION x="0" y="0" z="40" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 40 30 0" />
        </DESCENDANTS>
    </NODE>

    <NODE id="GoRoGo_board">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="15" y="4" z="20" />

        <DESCENDANTS>
            <NODEREF id="game_board"/>
        </DESCENDANTS>
    </NODE>

    <!-- Complete game board -->
    <NODE id="game_board">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="board"/>
            <NODEREF id="game_surface"/>
        </DESCENDANTS>
    </NODE>

    <!-- Wood edges around the board -->
    <NODE id="board">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="light_wood"/>

        <SCALE sx="1.2" sy="0.075" sz="1.2"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <!-- Board playing surface -->
    <NODE id="game_surface">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="game_board"/>

        <TRANSLATION x="0" y="0.38" z="0"/>
        <SCALE sx="0.8" sy="1" sz="0.8"/>
        <ROTATION axis="x" angle="-90"/>

        <DESCENDANTS>
            <LEAF type="rectangle" args="-2.5 2.5 2.5 -2.5"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="black_piece">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="black_rock"/>

        <TRANSLATION x="0" y="0.25" z="0"/>
        <ROTATION axis="x" angle="-90"/>

        <DESCENDANTS>
            <!-- <LEAF type="sphere" args="0.20 20 20" /> -->
            <LEAF type="cylinder" args="0.25 0.20 0.20 20 20 1 1"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="white_piece">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="white_rock"/>

        <TRANSLATION x="0" y="0.25" z="0"/>
        <ROTATION axis="x" angle="-90"/>

        <DESCENDANTS>
            <!-- <LEAF type="sphere" args="0.20 20 20" /> -->
            <LEAF type="cylinder" args="0.25 0.20 0.20 20 20 1 1"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="henge_piece">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="grey_rock"/>

        <TRANSLATION x="0" y="0.25" z="0"/>
        <ROTATION axis="x" angle="-90"/>

        <DESCENDANTS>
            <!-- <LEAF type="sphere" args="0.20 20 20" /> -->
            <LEAF type="cylinder" args="0.25 0.20 0.20 20 20 1 1"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="board_place">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="black_rock"/>

        <TRANSLATION x="0" y="0.39" z="0"/>
        <ROTATION axis="x" angle="-90"/>

        <DESCENDANTS>
            <LEAF type="cylinder" args="0.01 0.08 0.08 20 20 1 1"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="walls">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="wood_floor"/>

        <TRANSLATION x="0" y="0" z="0"/>

        <DESCENDANTS>
            <NODEREF id="wall1"/>
            <NODEREF id="wall2"/> 
            <NODEREF id="wall3"/>
            <NODEREF id="wall4"/> 
        </DESCENDANTS>
    </NODE>


    <NODE id="wall1">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="0" z="20" />
        <SCALE sx="1" sy="1" sz="2"/>

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall2">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="30" y="-20" z="20" />
        <SCALE sx="1" sy="1" sz="2"/>

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

     <NODE id="wall3">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="15" y="0" z="0"/>
        <SCALE sx="1.5" sy="1" sz="1"/>
        <ROTATION axis="y" angle="90"/>

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall4">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="15" y="0" z="40"/>
        <SCALE sx="1.5" sy="1" sz="1"/>
        <ROTATION axis="y" angle="90"/>

        <DESCENDANTS>
            <NODEREF id="wall"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <SCALE sx="0.02" sy="3" sz="4" />

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="tables">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="table1"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table1">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="15" y="3" z="20" />

        <DESCENDANTS>
            <NODEREF id="table"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="table_top"/>
            <NODEREF id="table_leg1"/>
            <NODEREF id="table_leg2"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table_top">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <SCALE sx="1.5" sy="0.2" sz="2"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table_leg1">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="-4" z="-4"/>

        <DESCENDANTS>
            <NODEREF id="table_leg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table_leg2">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="0" y="-4" z="4"/>
        <ROTATION axis="y" angle="180"/>

        <DESCENDANTS>
            <NODEREF id="table_leg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="table_leg">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <ROTATION axis="x" angle="15"/>
        <SCALE sx="1.3" sy="1" sz="0.1"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="screens">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="screen1"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="screen1">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="5.5" y="0" z="5"/>


        <DESCENDANTS>
            <NODEREF id="screen"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="screen">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <DESCENDANTS>
            <NODEREF id="screen_wall1"/>
            <NODEREF id="screen_wall2"/>
            <NODEREF id="screen_wall3"/>
            <!-- <NODEREF id="screen_wall4"/> -->
        </DESCENDANTS>
    </NODE>

    <NODE id="screen_wall1">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <SCALE sx="1" sy="2.5" sz="0.02"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>    

    <NODE id="screen_wall2">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="3.8" y="0" z="-2.15"/>
        <ROTATION axis="y" angle="60"/>
        <SCALE sx="1" sy="2.5" sz="0.02"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="screen_wall3">
        <MATERIAL id="defaultMaterial"/>
        <TEXTURE id="null"/>

        <TRANSLATION x="-3.8" y="0" z="2.15"/>
        <ROTATION axis="y" angle="240"/>
        <SCALE sx="1" sy="2.5" sz="0.02"/>

        <DESCENDANTS>
            <NODEREF id="cube"/>
        </DESCENDANTS>
    </NODE>  

</NODES>

</SCENE>